{
  "manifest_version": 3,
  "name": "YouTube Sponsor Skipper",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://sponsor.ajay.app/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}