{
  "manifest_version": 3,
  "name": "YouTube Auto Skipper",
  "version": "1.0",
  "description": "Automatically skips sponsored sections in YouTube videos.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage" 
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://sponsor.ajay.app/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["meyda.min.js", "analyzer.js", "interceptor.js", "constants.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}