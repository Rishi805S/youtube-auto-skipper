{
  "manifest_version": 3,
  "name": "SponsorSkip",
  "version": "1.0.0",
  "description": "Auto-skip sponsor segments in YouTube videos",
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "permissions": [
    "storage",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "SponsorSkip"
  }
}