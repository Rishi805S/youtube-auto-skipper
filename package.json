{
  "name": "youtube-auto-skipper",
  "version": "1.0.0",
  "type": "module",
  "description": "Automated sponsor skipping extension for YouTube",
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "watch": "rollup -c --watch",
    "build:ts": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,json,css,md}\"",
    "format-check": "prettier --check \"src/**/*.{js,ts,tsx,json,css,md}\"",
    "postinstall": "npx playwright install chrome",
    "dev": "cross-env NODE_ENV=development rollup -c --watch"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chrome": "^0.0.219",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.54.2",
    "prettier": "^3.3.0",
    "rollup": "^4.18.0",
    "rollup-plugin-copy": "^3.5.0",
    "serve": "^14.2.4",
    "ts-jest": "^29.4.1",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.3.0"
  }
}
